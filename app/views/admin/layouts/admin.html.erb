<!DOCTYPE html>
<html lang="en">
	<head>
	  <title><%= full_title(yield(:title)) %></title>
	  <meta name="viewport" content="width=device-width, initial-scale=1">
	  <%= stylesheet_link_tag    "admin", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "admin", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<%= render 'admin/layouts/navigation' %>
				</div>
			</div>
		</div>		
		<div class="container">
			<div class="row">
				<div class="col-md-9">
					<%= yield %>
				</div>
				<div style="border-left:1px solid black" class="col-md-3">
					<%= yield :right %>
				</div>
			</div>
		</div>
	</body>
</html>
